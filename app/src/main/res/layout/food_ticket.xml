<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:background="@color/grey" android:padding="3pt">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="@drawable/background_food_app">
        <ImageView
                android:layout_width="50pt"
                android:layout_height="50pt" app:srcCompat="@drawable/espresso" android:id="@+id/ivFoodImage"/>
        <TextView
                android:text="Coffee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tvName" android:textSize="24sp"
                android:gravity="center"/>
    </LinearLayout>
</LinearLayout>